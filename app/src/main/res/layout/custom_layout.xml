<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/idRLControl"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/idTVVideoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:drawablePadding="15dp"
        android:gravity="center"
        android:lines="1"
        android:padding="10dp"
        android:text="videoName"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:padding="8dp"
        android:id="@+id/controlBack"
        android:src="@drawable/backcontrolid" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/idIBBack"
            android:background="@android:color/transparent"
            android:src="@drawable/replay_10"
            android:layout_height="50dp"/>
        <ImageButton
            android:layout_width="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/idIBPause"
            android:background="@android:color/transparent"
            android:src="@drawable/pause_ic"
            android:layout_height="50dp"/>
        <ImageButton
            android:layout_width="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/idIBForward"
            android:background="@android:color/transparent"
            android:src="@drawable/forward_10"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="5dp"
        android:layout_margin="2dp"
        android:layout_height="wrap_content">
        <SeekBar
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/idSeekbarProgressBar"
            android:progressBackgroundTint="@color/white"
            android:progressTint="@color/red"
            android:thumb="@drawable/seekbar_thumb"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/idTVTime"
            android:text="Time"
            android:textColor="@color/white"
            android:layout_weight="0"
            android:textSize="18dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>